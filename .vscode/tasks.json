{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "make",
      "type": "process",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "debug",
      "command": "mono",
      "type": "shell",
      "args": [
        "--debug",
        "--debugger-agent=transport=dt_socket,server=y,address=127.0.0.1:55555",
        "hydra.exe",
        "code_samples/${input:test-program}"
      ]
    }
  ],
  "inputs": [
    {
      "id": "test-program",
      "description": "the hydra program to run",
      "default": "001_ultimate.hydra",
      "type": "promptString"
    }
  ]
}
